<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.example.handymanapplication.ui.home.ViewImagesActivity">

    <TextView
        android:id="@+id/text_post_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Images"
        android:textColor="@color/black_overlay"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_images_recycler"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_post_images">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
